    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>A New Entry!</title>
    <link href="https://fonts.googleapis.com/css2?family=Playwrite+CO:wght@100..400&display=swap" rel="stylesheet">
</head>
<style>
    h1 {
        text-align: center;
        font-family: 'Playwrite CO', sans-serif;
        color: #ca7ad3;
      
    }
    
    body {
        background-color: #42dbbf;
    }
    
    .form {
        text-align: center;
        background-color: #ca7ad3;
        padding: 20px;
        margin: 20px;
        border-radius: 10px;
        align-items: center;
    }
    .info {
        color: #f4eb82;
        font-family: 'Playwrite CO', sans-serif;
    }

    #delete-edit {
        background-color: #f4eb82;
        color: #ca7ad3;
        font-family: 'Playwrite CO', sans-serif;
        border-radius: 25px;
        padding: 10px;
        margin: 10px;
    
    }

    #input-bar {
        border-radius: 25px;
        padding: 5px;
        margin: 5px;
        background-color: #e4afda;
    }
</style>
<body>
    <nav class="navbar navbar-light" style="background-color: #e2e076; font-family: 'Playwrite CO', sans-serif; display: grid; grid-template-columns: 1fr 1fr 1fr; border-radius: 12px; text-align: center;">
        <a href="/auth/sign-in">Login</button>
            <a href="/auth/sign-up">Register</button>
            <a href="/logs">View All Entries</button>
      </nav>
    <h1>New Journal Entry</h1>
    <fieldset class="form">
    <form action = "/logs" method = "POST">
        <label class="info">Time: </label>
        <input id="input-bar" type="text" name="time" ><br />

        <label class="info">Date: </label>
        <input id="input-bar" type="text" name="date" ><br  />

        <label class="info">Title: </label>
        <input id="input-bar" type="text" name="title" ><br  />

        <label class="info">Mood: </label>
        <input id="input-bar" type="text" name="mood" ><br  />
        
        <label class="info" for="content">Entry: </label>
        <textarea id="input-bar" name="entry" id="entry" cols="30" rows="10"></textarea><br  />
        <button id="delete-edit" type="submit">Create</button><br  />
    <label></label>
</fieldset>
</body>
</html